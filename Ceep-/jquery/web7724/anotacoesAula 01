//Tbm podemos criar uma funcao dentro de uma "variavel"

const mudaTexto = function(){
    if (this.innerText == 'Blocos'){
        this.innerText = 'Linhas';
} else{
    this.innerText = 'Linhas';
}

btn.onclick = mudaTexto;

